<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <ImageView
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:scaleType="fitXY"
      android:src="@drawable/hacker" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/name"
      android:layout_below="@id/image"
      android:layout_margin="5dp"
      android:paddingLeft="5dp"
      android:text="Ayush_ShaZz"
      android:textSize="25sp"
      android:fontFamily="sans-serif-condensed"
      android:textStyle="bold"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/comma"
      android:layout_below="@id/image"
      android:layout_toRightOf="@id/name"
      android:text=","
      android:textStyle="bold"
      android:textSize="25sp"
      android:paddingRight="5dp"
      android:layout_marginTop="5dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/image"
      android:layout_toRightOf="@id/comma"
      android:text="20"
      android:textSize="25sp"
      android:layout_marginTop="6dp"
      />


  <ImageView
      android:id="@+id/location"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:scaleType="fitXY"
      android:src="@drawable/location"
      android:layout_below="@id/name"
      android:layout_marginLeft="10dp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/locationtext"
      android:layout_below="@id/name"
      android:layout_toRightOf="@id/location"
      android:layout_marginTop="3dp"
      android:text="less than a mile away"
      android:textSize="15sp"
      android:paddingLeft="10dp"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#49000000"
      android:layout_below="@id/location"
      android:layout_marginTop="40dp"
      android:id="@+id/line"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/line"
      android:id="@+id/describe"
      android:paddingLeft="20dp"
      android:text="Believe in yourself.............. "
      android:textAlignment="center"
      android:layout_marginTop="25dp"
      android:layout_marginBottom="15dp"
      />

  <!--<TextView-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="0.5dp"-->
      <!--android:background="#49000000"-->
      <!--android:layout_below="@id/describe"-->
      <!--android:layout_marginTop="10dp"-->
      <!--android:id="@+id/secondline"-->
      <!--android:paddingLeft="20dp"-->
      <!--android:paddingRight="20dp"-->
      <!--/>-->

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/describe"
      android:layout_marginTop="65dp"

      android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    >
  <ImageButton
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="#FFFFFF"
      android:scaleType="fitXY"
      android:src="@drawable/editprofile"
      android:layout_gravity="center_horizontal"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Edit_Profile"
     android:layout_gravity="center_horizontal"
     />

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

      <ImageButton
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@android:color/transparent"
          android:scaleType="fitXY"
          android:src="@drawable/settings"
          android:layout_gravity="center_horizontal"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Setting"
          android:layout_gravity="center_horizontal"
          />

    </LinearLayout>




  </LinearLayout>



</RelativeLayout>